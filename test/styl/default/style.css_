body {
	line-height: 1.5em;
	color:#000;
}

table .row2 td{
background-color:#F7F7F7;
}

table tr:hover td{
background-color:#E5E5E5;
}

a{
color:#666;
text-decoration:none;	
}

a:hover{
color:#000;
text-decoration:none;	
}

.site{
	background:rgba(255,255,255,0.75);	
}
header{
background:#CCC;	
position:relative;
display:block;
height:200px;
}
header .headerlogo{
font-size:30px;
padding:5px;
display:block;
float:left;
display:block;
}
header .profilbutton {
display:block;
float:right;
}


nav ul li a,
nav ul li
{
	text-decoration:none;
	color:#000;
}

/*menu pictures*/
nav ul li a .menuimg,
nav ul li .menuimg,
nav ul li a:hover .menuimg_hover,
nav ul li:hover .menuimg_hover
{
display:block;
float:left;
height:20px;
}
nav ul li a:hover .menuimg,
nav ul li:hover .menuimg,
nav ul li a .menuimg_hover,
nav ul li .menuimg_hover
{
display:none;
}


.menu{
position:absolute;
bottom:0;
left:0;
display:table;
width:100%;
}
.menu ul{
display:table-row;
background:#999;	
}
.menu ul li{
display:table-cell;
}
content{
display:block;
background:url(img/drop-shadow.png) top center no-repeat;
padding-top:18px;
font-size:18px;	
}


footer{
background:#999;	
	
}
.facebookbutton,.googlebutton{
position:fixed;
top:110px;
left:-5px;
width:50px;
height:50px;
cursor:pointer;
}

.pagerightside right h1,
.pageleftside left h1{
background:#CCC;	
	
}
.googlebutton{
top:160px;
left:-5px;
}
.facebookbutton:hover .facebookcontainer,.googlebutton:hover .facebookcontainer{
opacity:1;
display:block;
width:250px;
 box-shadow: rgba(0,0,0,1) 0 1px 10px;  
  -webkit-box-shadow: box-shadow;
   -moz-box-shadow: box-shadow;

}
.facebookcontainer{
	position:fixed;
	top:80px;
	left:45px;
	width:0px;
	height:auto;
	background-color:#FFF;
	display:block;
	z-index:99999;
	font-size:10px;
	overflow:hidden;
	opacity:0;
	
	 transition: width 2s,opacity 2s;
	-webkit-transition: width 2s,opacity 2s;
	-moz-transition: width 2s,opacity 2s;
	-o-transition: width 2s,opacity 2s;
	-ms-transition: width 2s,opacity 2s;
}
